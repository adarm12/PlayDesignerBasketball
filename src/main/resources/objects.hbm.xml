<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>


    <class name="com.ashcollege.entities.User" table="users" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="username" type="string" column="username"/>
        <property name="password" type="string" column="password"/>
        <property name="secret" type="string" column="secret"/>

    </class>


    <class name="com.ashcollege.entities.Friendship" table="friendships">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="requester" class="com.ashcollege.entities.User" column="requester_id" not-null="true"/>
        <many-to-one name="accepter" class="com.ashcollege.entities.User" column="accepter_id" not-null="true"/>
        <property name="status" column="status" type="int"/>
    </class>

    <class name="com.ashcollege.entities.Play" table="plays" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="owner" class="com.ashcollege.entities.User" column="owner_id" not-null="true"/>



    </class>

    <class name="com.ashcollege.entities.Phase" table="phases" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="player1" class="com.ashcollege.entities.PlayerPhase" column="player1_id" not-null="true"/>
        <many-to-one name="player2" class="com.ashcollege.entities.PlayerPhase" column="player2_id" not-null="true"/>
        <many-to-one name="player3" class="com.ashcollege.entities.PlayerPhase" column="player3_id" not-null="true"/>
        <many-to-one name="player4" class="com.ashcollege.entities.PlayerPhase" column="player4_id" not-null="true"/>
        <many-to-one name="player5" class="com.ashcollege.entities.PlayerPhase" column="player5_id" not-null="true"/>
        <property name="order" type="int" column="order"/>

        <many-to-one name="play" class="com.ashcollege.entities.Play" column="play_id"/>

    </class>



    <class name="com.ashcollege.entities.PlayerPhase" table="playersToPhases" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="hasBall" type="boolean" column="ball"/>
        <property name="number" type="int" column="number"/>
        <property name="x" type="string" column="x"/>
        <property name="y" type="string" column="y"/>
        <property name="action" type="int" column="action"/>


    </class>

